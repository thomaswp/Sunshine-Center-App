<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D9AB21"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewSunshineBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Sunshine"
        android:padding="5dip"
        android:src="@drawable/logo_trans_bigger" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="330dip"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:text="@string/recordsAndMeetings"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/buttonSearch"
                        android:layout_width="65dip"
                        android:layout_height="65dip"
                        android:adjustViewBounds="true"
                        android:paddingBottom="8dip"
                        android:paddingLeft="8dip"
                        android:paddingRight="5dip"
                        android:paddingTop="5dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/search" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonSeekers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_marginBottom="15dip"
                        android:layout_weight="1"
                        android:text="@string/seekers"
                        android:textSize="20dip" />

                    <Button
                        android:id="@+id/buttonHolders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="15dip"
                        android:layout_weight="1"
                        android:text="@string/holders"
                        android:textSize="20dip" />

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dip"
                        android:layout_weight="1" >

                        <Button
                            android:id="@+id/buttonLaws"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/laws"
                            android:textSize="20dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutContact"
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/social_bg"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/social"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/social"
            android:src="@drawable/email" />

        <ImageView
            android:id="@+id/imageViewFacebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/social"
            android:src="@drawable/f_logo" />

        <ImageView
            android:id="@+id/imageViewTwitter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/social"
            android:src="@drawable/t_logo" />

        <ImageView
            android:id="@+id/imageViewSunshine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/social"
            android:src="@drawable/sunshine" />
    </LinearLayout>

</LinearLayout>